<?xml version="1.0"?>
<block>
  <name>OpenCL Complex To Mag Phase</name>
  <key>clenabled_complextomagphase</key>
  <category>[OpenCL-Enabled]</category>
  <import>import clenabled</import>
  <make>clenabled.clComplexToMagPhase($openCLPlatform,$setDebug)</make>
	<param>
		<name>OpenCL Platform</name>
		<key>openCLPlatform</key>
		<type>enum</type>
		<option>
			<name>GPU</name>
			<key>1</key>
		</option>
		<option>
			<name>Accelerator</name>
			<key>2</key>
		</option>
		<option>
			<name>CPU</name>
			<key>3</key>
		</option>
		<option>
			<name>Any</name>
			<key>4</key>
		</option>
	</param>
	<param>
		<name>Debug</name>
		<key>setDebug</key>
		<type>enum</type>
		<option>
			<name>Off</name>
			<key>0</key>
		</option>
		<option>
			<name>On</name>
			<key>1</key>
		</option>
	</param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>Mag</name>
    <type>float</type>
  </source>
  <source>
    <name>Phase</name>
    <type>float</type>
  </source>
	<doc>
This block is an OpenCL enabled version of the built-in Complex To Mag Phase block.
	</doc>
</block>
